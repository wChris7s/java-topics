<?xml version="1.0" encoding="utf-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="example-jpa">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.chrisws.app.entity.Client</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/chris"/>
            <property name="jakarta.persistence.jdbc.user" value="chris"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect"/>
        </properties>
    </persistence-unit>
</persistence>